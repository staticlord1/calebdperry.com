<section id="resume">
    {% for section in page.header.sections %}
    <div class="row {{ section.css_class }}">
        <div class="three columns header-col">
            <h1><span>{{ section.title }}</span></h1>
        </div>
        <div class="nine columns main-col">
            {% for item in section.items %}
            <div class="row item">
                <div class="twelve columns">
                    {% if item.title %}
                    <h3>{{ item.title }}</h3>
                    {% endif %}
                    {% if item.info or item.date %}
                    <p class="info">{{ item.info }} <span>&bull;</span> <em class="date">{{ item.date }}</em></p>
                    {% endif %}
                    <p>
                        {{ item.description }}
                    </p>

                    {% if item.languages %}
                    <div class="twelve columns">
                        {% for language in item.languages|sort %}
                                <em>{{ language.name }}</em>
                            {% if loop.last == false %}
                                <em>|</em>
                            {% endif %}
                        {% endfor %}
                    </div>
                    {% endif %}

                    {% if item.tools %}
                    <div class="twelve columns">
                        {% for tool in item.tools|sort %}
                                <em>{{ tool.name }}</em>
                            {% if loop.last == false %}
                                <em>|</em>
                            {% endif %}
                        {% endfor %}
                    </div>
                    {% endif %}

                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    {% endfor %}
</section>
